<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                    </button> <a class="navbar-brand" href="#" data-bind="click: gotoDefault">Drewnex</a>
                </div>

                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav" data-bind="foreach: pages">
                        <li data-bind="css: { active: $data == $root.currentPage() }">
                            <a href="#" data-bind="text: $data,
                               attr: { href: '#' + $data }"></a>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown loginDropdown">
                            <a href="#" data-bind="text: loggedInUser" class="dropdown-toggle dropdownText" data-toggle="dropdown"><strong class="caret"></strong></a>
                            <ul class="dropdown-menu" data-bind="visible: user">
                                <!-- FOR LOGGED-IN USER-->
                                <li class="loginDropdown">
                                    <a class="dropdownText" href="#" data-bind="click: logout">Wyloguj</a>
                                </li>
                                <!-- FOR ANONYMOUS-->
                                @*<li class="loginDropdown" data-bind="visible: !user()">
                                    <a class="dropdownText" href="#Logowanie">Zaloguj</a>
                                </li>
                                <li class="divider loginDropdown" data-bind="visible: !user()">
                                </li>
                                <li class="loginDropdown" data-bind="visible: !user()">
                                    <a class="dropdownText" href="#Rejestracja">Nowy użytkownik</a>
                                </li>*@
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>
    <div class="row" style="padding-top: 75px;">
    </div>
    <div class="row" data-bind="visible: error">
        <div class="col-md-12 alert-danger" style="font-size: x-large" data-bind="text: error"></div>
    </div>
<div class="row" data-bind="visible: requestsVisible">
    <div class="col-md-6" data-bind="visible: isServiceProvider">
        <div data-bind="visible: requestsAssignedToMe().length">
            <h1 class="text-center">
                Obsługiwane przez Ciebie
            </h1>
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th class="text-center">
                        <h2>Typ</h2>
                    </th>
                    <th class="text-center">
                        <h2>Zlecający</h2>
                    </th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
                </thead>
                <tbody data-bind="foreach: requestsAssignedToMe">
                <tr>
                    <td style="vertical-align: middle" class="text-center">
                        <h3 data-bind="text: Type.Name"></h3>
                    </td>
                    <td style="vertical-align: middle" class="text-center">
                        <h3 data-bind="text: RequestingUserName"></h3>
                    </td>
                    <td class="col-md-3">
                        <button type="button" class="btn btn-block btn-danger btn-huge " data-bind="click: $parent.cancelRequest">Anuluj</button>
                    </td>
                    <td class="col-md-1"></td>
                    <td class="col-md-4">
                        <button type="button" class="btn btn-block btn-success btn-huge " data-bind="click: $parent.completeRequest">Zakończ</button>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-md-6">
        <h1 class="text-center">
            Zlecenia
        </h1>
        <table class="table table-striped table-hover">
            <thead>
            <tr><th class="text-center">
                    <h2>Typ</h2></th>
                <th class="text-center">
                    <h2>Zlecający</h2></th>
                <th class="text-center">
                    <h2>Utworzono</h2></th>
                <th class="text-center">
                    <h2>Obsługuje</h2></th></tr>
            </thead>
            <tbody data-bind="foreach: activeRequests">
            <tr>
                <td style="vertical-align: middle" class="text-center">
                    <h3 data-bind="text: Type.Name"></h3></td>
                <td style="vertical-align: middle" class="text-center">
                    <h3 data-bind="text: RequestingUserName"></h3></td>
                <td style="vertical-align: middle" class="text-center">
                    <h3 data-bind="text: parseDate(CreationDate)"></h3></td>
                <td><button type="button" class="btn btn-block btn-huge " data-bind="
						click: $parent.acceptRequest,
						css: { 'btn-info' : !ProvidingUserName, 'btn-default' : ProvidingUserName},
						enable: !ProvidingUserName,
                        text: ProvidingUserName ? ProvidingUserName : 'Przyjmij', 
						visible: (ProvidingUserName || $parent.isServiceProvider)
                        "></button>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
</div>

    <div class="row" data-bind="visible: registerVisible">
        <div class="col-md-6 col-md-offset-3">
            <form data-bind="submit: register">
                <h2>Nowy użytkownik</h2>
                <div class="form-group">
                    <h4>Nazwa</h4>
                    <input class="form-control" type="text" data-bind="value: registerUsername" />
                </div>
                <div class="form-group">
                    <h4>Hasło</h4>
                    <input class="form-control" type="password" data-bind="value: registerPassword" />
                </div>
                <div class="form-group">
                    <h4>Powtórz hasło</h4>
                    <input class="form-control" type="password" data-bind="value: registerPassword2" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-info btn-huge">Rejestruj</button>
                </div>
            </form>
        </div>
    </div>

<div class="row" data-bind="visible: createRequestsVisible">
    <div data-bind="visible: isRequester">
        <div>
            <ul data-bind="foreach: requestTypes">
                <li>
                    <button style="padding-left: 50px; padding-right: 50px" class="btn btn-info" data-bind="text: $data.Name, click: $parent.createRequest"></button>
                </li>
            </ul>
        </div>

        <div data-bind="visible: requestsCreatedByMe().length">
            <h1 class="text-center">
                Utworzone zlecenia
            </h1>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th class="text-center">
                            <h2>Typ</h2>
                        </th>
                        <th class="text-center">
                            <h2>Utworzono</h2>
                        </th>
                        <th class="text-center">
                            <h2>Obsługuje</h2>
                        </th>
                    </tr>
                </thead>
                <tbody data-bind="foreach: requestsCreatedByMe">
                    <tr>
                        <td style="vertical-align: middle" class="text-center">
                            <h3 data-bind="text: Type.Name"></h3>
                        </td>
                        <td style="vertical-align: middle" class="text-center">
                            <h3 data-bind="text: parseDate(CreationDate)"></h3>
                        </td>
                        <td>
                            <button type="button" class="btn btn-block btn-huge btn-default" disabled="disabled" data-bind="
                                    text: ProvidingUserName ? ProvidingUserName : 'Przyjmij', 
						            visible: ProvidingUserName
                                    "></button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>


    </div>
    <div class="col-md-6 col-md-offset-3" data-bind="visible: !isRequester()">
        <h1 class="text-center">
            Nie masz uprawnień do tworzenia zleceń.
        </h1>
    </div>
</div>
    <div class="row" data-bind="visible: loginVisible">
        <div class="col-md-6 col-md-offset-3" data-bind="visible: !user()">
            <h2>Logowanie</h2>
            <form data-bind="submit: login">
                <div class="form-group">
                    <h4>Nazwa</h4>
                    <input class="form-control" type="text" data-bind="value: loginUsername"/>
                </div>
                <div class="form-group">
                    <h4>Hasło</h4>
                    <input class="form-control" type="password" data-bind="value: loginPassword"/>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-info btn-huge"> Zaloguj </button>
                </div>
                <a href="/#Rejestracja">Nie masz jeszcze konta? Zarejestruj się!</a>
            </form>
        </div>

        <div class="col-md-6 col-md-offset-3" data-bind="visible: user">
            <h2 data-bind="text: loginMessage"></h2>
            <div>
                <button class="btn btn-info btn-huge" data-bind="click: logout"> Wyloguj </button>
            </div>
        </div>
    </div>

    <div class="row" data-bind="visible: administrationVisible">
        <div class="col-md-6 col-md-offset-3" data-bind="visible: isAdmin">
            <h1 class="text-center">
                Użytkownicy
            </h1>
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th class="text-center"></th>
                    <th class="text-center">Admin</th>
                    <th class="text-center">Obsługa Zleceń</th>
                    <th class="text-center">Tworzenie Zleceń</th>
                </tr>
                </thead>
                <tbody data-bind="foreach: usersAndRoles">
                <tr>
                    <td style="vertical-align: middle" class="text-center">
                        <h3 data-bind="text: Name"></h3>
                    </td>
                    <td style="vertical-align: middle" class="text-center">
                        <input type="checkbox" data-bind="checked: IsAdmin"/>
                    </td>
                    <td style="vertical-align: middle" class="text-center">
                        <input type="checkbox" data-bind="checked: IsServiceProvider"/>
                    </td>
                    <td style="vertical-align: middle" class="text-center">
                        <input type="checkbox" data-bind="checked: IsRequester"/>
                    </td>
                </tr>
                </tbody>
            </table>

            <div>
                <button class="btn btn-info btn-huge" data-bind="click: saveRoles"> Zapisz </button>
            </div>

        </div>
        <div class="col-md-6 col-md-offset-3" data-bind="visible: !isAdmin()">
            <h1 class="text-center">
                Nie jesteś administratorem.
            </h1>
        </div>
    </div>
</div>