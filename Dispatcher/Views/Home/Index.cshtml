@section scripts {
    @Scripts.Render("~/bundles/app")
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
                <div class="navbar-header">

                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                    </button> <a class="navbar-brand" href="#">Drewnex</a>
                </div>

                <div class="nav navbar-text">
                    <div class="alert-danger" data-bind="text: error">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    </div>
                </div>

                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" data-bind="text: loginMessage" class="dropdown-toggle" data-toggle="dropdown"><strong class="caret"></strong></a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="#" data-bind="click: logout">Wyloguj</a>
                            </li>
                            <li class="divider">
                            </li>
                            <li>
                                <a href="#">Zmień hasło</a>
                            </li>
                        </ul>
                    </li>
                </ul>

            </nav>
        </div>
    </div>
    <div class="row" style="padding-top: 100px" data-bind="visible: user">
        <div class="col-md-6">
            <h3 class="text-center">
                Otwarte zlecenia
            </h3>
            <button class="btn btn-block btn-huge btn-success" data-bind="click: createRequest">Dodaj nowe</button>
            <table class="table table-striped table-hover">
                <thead>
                <tr><th>Typ</th>
                    <th>Zlecający</th>
                    <th>Utworzono</th>
                    <th></th></tr>
                </thead>
                <tbody data-bind="foreach: activeRequests">
                <tr>
                    <td data-bind="text: Type"></td>
                    <td data-bind="text: Requester.Name"></td>
                    <td data-bind="text: CreationDate"></td>
                    <td><button type="button" class="btn btn-block btn-huge " data-bind="
						click: $parent.acceptRequest,
						css: { 'btn-info' : !ProvidingUserName, 'btn-default' : ProvidingUserName},
						enable: !ProvidingUserName,
                        text: ProvidingUserName ? 'W trakcie' : 'Przyjmij' 
						"></button></td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="col-md-6">
            <h3 class="text-center">
                Obsługiwane przez Ciebie
            </h3>
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>Typ</th>
                    <th>Zlecający</th>
                    <th>Przyjęto</th>
                    <th></th>
                </tr>
                </thead>
                <tbody data-bind="foreach: myRequests">
                <tr>
                    <td data-bind="text: Type"></td>
                    <td data-bind="text: Requester.Name"></td>
                    <td data-bind="text: PickedUpDate"></td>
                    <td>
                        <button type="button" class="btn btn-block btn-success btn-huge " data-bind="
                                    click: $parent.completeRequest,
                                    ">Zakończ</button>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="row" data-bind="visible: !user()">
        <div class="col-sm-4">
            <form data-bind="submit: register">
                <h3>Nowy użytkownik</h3>
                <div class="form-group">
                    <label>Nazwa użytkownika</label>
                    <input class="form-control" type="text" data-bind="value: registerUsername"/>
                </div>
                <div class="form-group">
                    <label>Hasło</label>
                    <input class="form-control" type="password" data-bind="value: registerPassword"/>
                </div>
                <div class="form-group">
                    <label>Powtórz hasło</label>
                    <input class="form-control" type="password" data-bind="value: registerPassword2"/>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn">Rejestruj</button>
                </div>
            </form>
        </div>
        <div class="col-sm-4">
            <h3>Log In</h3>
            <form data-bind="submit: login">
                <div class="form-group">
                    <label>Nazwa użytkownika</label>
                    <input class="form-control" type="text" data-bind="value: loginUsername"/>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input class="form-control" type="password" data-bind="value: loginPassword"/>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-info">Log In</button>
                </div>
            </form>
        </div>
    </div>
</div>