@section scripts {
    @Scripts.Render("~/bundles/app")
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                    </button> <a class="navbar-brand" href="#">Drewnex</a>
                </div>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <div class="nav navbar-text alert-danger" data-bind="text: error"></div>
                      <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown loginDropdown">
                            <a href="#" data-bind="text: loginMessage" class="dropdown-toggle dropdownText" data-toggle="dropdown"><strong class="caret"></strong></a>
                            <ul class="dropdown-menu">
                                <li loginDropdown>
                                    <a class="dropdownText" href="#" data-bind="click: logout">Wyloguj</a>
                                </li>
                                <li class="divider loginDropdown">
                                </li>
                                <li loginDropdown>
                                    <a class="dropdownText" href="#">Zmień hasło</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>
    <div class="row" style="padding-top: 100px; padding-left:100px;" data-bind="visible: user">
        <button style="padding-left: 50px; padding-right: 50px" class="btn  btn-huge btn-warning" data-bind="click: createRequest">Dodaj nowe</button>
    </div>
    <div class="row" data-bind="visible: user">
        <div class="col-md-6">
            <h1 class="text-center">
                Otwarte zlecenia
            </h1>
            <table class="table table-striped table-hover">
                <thead>
                <tr><th class="text-center" ><h2>Typ</h2></th>
                    <th class="text-center" ><h2>Zlecający</h2></th>
                    <th class="text-center" ><h2>Utworzono</h2></th>
                    <th class="text-center" ><h2>Obsługuje</h2></th></tr>
                </thead>
                <tbody data-bind="foreach: activeRequests">
                <tr>
                    <td style="vertical-align:middle" class="text-center col-md-1"><h3 data-bind="text: Type"></h3></td>
                    <td style="vertical-align:middle" class="text-center"><h3 data-bind="text: Requester.Name"></h3></td>
                    <td style="vertical-align:middle" class="text-center"><h3 data-bind="text: parseDate(CreationDate)"></h3></td>
                    <td class="col-md-4"><button type="button" class="btn btn-block btn-huge " data-bind="
						click: $parent.acceptRequest,
						css: { 'btn-info' : !ProvidingUserName, 'btn-default' : ProvidingUserName},
						enable: !ProvidingUserName,
                        text: ProvidingUserName ? ProvidingUserName : 'Przyjmij', 
						visible: (ProvidingUserName || $parent.isServiceProvider)
                        "></button>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="col-md-6" data-bind="visible: isServiceProvider">
            <h1 class="text-center">
                Obsługiwane przez Ciebie
            </h1>
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th class="text-center"><h2>Typ</h2></th>
                    <th class="text-center" ><h2>Zlecający</h2></th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
                </thead>
                <tbody data-bind="foreach: myRequests">
                <tr>
                    <td style="vertical-align:middle" class="text-center col-md-1"><h3 data-bind="text: Type"></h3></td>
                    <td style="vertical-align:middle" class="text-center"><h3 data-bind="text: Requester.Name"></h3></td>
                    <td class="col-md-3">
                        <button type="button" class="btn btn-block btn-danger btn-huge " data-bind="click: $parent.cancelRequest">Anuluj</button>
                    </td>
                    <td class="col-md-1"></td>
                    <td class="col-md-4">
                        <button type="button" class="btn btn-block btn-success btn-huge " data-bind="click: $parent.completeRequest">Zakończ</button>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="row" data-bind="visible: !user()">
        <div class="col-sm-4" data-bind="visible: isAdmin">
            <form data-bind="submit: register">
                <h3>Nowy użytkownik</h3>
                <div class="form-group">
                    <label>Nazwa użytkownika</label>
                    <input class="form-control" type="text" data-bind="value: registerUsername"/>
                </div>
                <div class="form-group">
                    <label>Hasło</label>
                    <input class="form-control" type="password" data-bind="value: registerPassword"/>
                </div>
                <div class="form-group">
                    <label>Powtórz hasło</label>
                    <input class="form-control" type="password" data-bind="value: registerPassword2"/>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-info">Rejestruj</button>
                </div>
            </form>
        </div>
        <div class="col-sm-4">
            <h3>Log In</h3>
            <form data-bind="submit: login">
                <div class="form-group">
                    <label>Nazwa użytkownika</label>
                    <input class="form-control" type="text" data-bind="value: loginUsername"/>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input class="form-control" type="password" data-bind="value: loginPassword"/>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-info">Log In</button>
                </div>
            </form>
        </div>
    </div>
</div>